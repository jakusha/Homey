<%= form_with model: [ @project, @project.comments.build ] do |form| %>
  <p>
    <%= form.label :name %>
    <%= form.text_field :name %>
     <% @project.comments.build.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>
  <p>
    <%= form.label :comment %>
    <%= form.text_area :comment %>
     <% @project.comments.build.errors.full_messages_for(:comment).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>
  
  <p>
    <%= form.submit %>
  </p>
<% end %>